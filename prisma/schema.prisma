generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  // directUrl removed - not needed with direct Neon connection
}

// ============================================================================
// NextAuth.js Models
// ============================================================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  passwordHash  String?   // For email/password auth
  image         String?
  
  accounts      Account[]
  sessions      Session[]
  passkeys      Passkey[]
  
  // User Data
  drafts        Draft[]
  sentEmails    SentEmail[]
  smtpSettings  SmtpSettings?
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

// Passkey (WebAuthn Credential)
model Passkey {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  credentialId    String   @unique // Base64URL encoded
  publicKey       Bytes    // COSE public key
  counter         Int      @default(0) // Signature counter for replay protection
  
  deviceType      String   // "singleDevice" or "multiDevice"
  backedUp        Boolean  @default(false) // Cloud synced
  transports      String[] // ["internal", "usb", "ble", "nfc"]
  
  name            String?  // User-friendly name like "MacBook Pro"
  lastUsedAt      DateTime?
  createdAt       DateTime @default(now())
  
  @@index([userId])
}

// WebAuthn Challenge Storage
model AuthChallenge {
  id        String   @id @default(cuid())
  challenge String   @unique
  userId    String?  // Null for authentication (unknown user)
  type      String   // "registration" or "authentication"
  expiresAt DateTime
  createdAt DateTime @default(now())
  
  @@index([challenge])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}


// ============================================================================
// User Data Models (Synced)
// ============================================================================

model Draft {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  name        String
  subject     String?
  body        String   @db.Text
  recipients  String   @db.Text // JSON array
  attachments String?  @db.Text // JSON array
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
}

model SentEmail {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  subject     String
  body        String   @db.Text
  recipients  String   @db.Text // JSON array (list of emails)
  attachments String?  @db.Text // JSON array (filenames or references)
  
  clickedCount Int @default(0)
  openedCount  Int @default(0)
  
  sentAt      DateTime @default(now())
  
  @@index([userId])
}

model SmtpSettings {
  id        String  @id @default(cuid())
  userId    String  @unique
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  host      String
  port      Int
  email     String // SMTP Username
  password  String // SMTP Password
  fromEmail String?
  fromName  String?
  replyTo   String?
  delay     Int     @default(500)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ============================================================================
// Existing Models (Email Campaigns)
// ============================================================================

model Campaign {
  id        String     @id @default(uuid())
  createdAt DateTime   @default(now())
  
  // Encrypted SMTP Settings
  host      String
  port      Int
  user      String
  pass      String     // Encrypted
  secure    Boolean
  fromName  String?    // Optional sender display name
  name      String?    // Optional campaign name for UI organization
  
  // Privacy
  userId    String     @default("anonymous")
  
  jobs      EmailJob[]
  attachments CampaignAttachment[] // Relation to attachments
}

model CampaignAttachment {
  id          String   @id @default(uuid())
  campaignId  String
  campaign    Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  
  filename    String
  content     String   // Base64 encoded content
  contentType String
  
  createdAt   DateTime @default(now())
  
  @@index([campaignId])
}


model EmailJob {
  id           String    @id @default(uuid())
  campaignId   String
  campaign     Campaign  @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  
  recipient    String
  subject      String
  body         String
  
  status       String    @default("PENDING") // PENDING, SENDING, SENT, FAILED
  error        String?
  
  scheduledFor DateTime
  sentAt       DateTime?
  
  // Retry Tracking
  retryCount           Int       @default(0)     // Number of retry attempts
  maxRetries           Int       @default(3)     // Max allowed retries
  nextRetryAt          DateTime?                 // When to retry (for manual cron pacing)
  originalScheduledFor DateTime?                 // Original time for delay calculation
  
  // Tracking
  trackingId   String    @unique @default(uuid())
  openedAt     DateTime?
  openCount    Int       @default(0)
  ipAddress    String?   // Store recipient IP on open
  // clicks       Click[] // Removed
  
  createdAt    DateTime  @default(now())
  
  @@index([status, scheduledFor])
  @@index([trackingId])
  @@index([nextRetryAt])
}



